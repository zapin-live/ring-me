{
  "manifest_version": 3,
  "name": "Ring Me - Reduce screen time",
  "description": "Plays a loud sound when visiting websites you want to avoid",
  "version": "1.0.1",
  "action": {
    "default_icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "./popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["tabs", "storage", "offscreen", "idle"]
}
