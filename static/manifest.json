{
  "manifest_version": 3,
  "name": "Ring Me",
  "description": "Plays a loud sound when visiting websites you have predefined",
  "version": "1.0",
  "action": {
    "default_icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "./popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["tabs", "storage", "offscreen"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+O",
        "mac": "Command+Shift+O"
      } }
  }
}
